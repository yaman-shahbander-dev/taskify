{
    "openapi": "3.0.0",
    "info": {
        "title": "Taskify API",
        "description": "API Documentation",
        "contact": {
            "email": "support@yaman.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "API Server"
        }
    ],
    "paths": {
        "/admin/v1/client/login": {
            "post": {
                "tags": [
                    "Platform Access"
                ],
                "summary": "Login as admin",
                "description": "This endpoint is used to login a user as admin",
                "operationId": "fb108008f89f25b90f824ed80a6b35e4",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "email",
                                        "example": "admin@admin.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "12345678"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AdminResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unprocessable Content"
                                        },
                                        "errors": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "The email field is required."
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/company/v1/client/register": {
            "post": {
                "tags": [
                    "Platform Access"
                ],
                "summary": "Register a company",
                "description": "This endpoint registers a user company",
                "operationId": "03f5f2a5edba4f154456cbddc39f72ab",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    },
                                    "address": {
                                        "type": "string",
                                        "example": "123 John Street"
                                    },
                                    "contact_number": {
                                        "type": "string",
                                        "example": "+963996222469"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CompanyResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Failed operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Failed to create user"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AdminResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "OK"
                    },
                    "data": {
                        "properties": {
                            "id": {
                                "type": "string",
                                "format": "uuid",
                                "example": "9d609e3f-5f8a-449d-a89c-018b704fedb8"
                            },
                            "name": {
                                "type": "string",
                                "example": "yaman"
                            },
                            "email": {
                                "type": "string",
                                "example": "yaman@gmail.com"
                            },
                            "companies": {
                                "$ref": "#/components/schemas/companyResponse"
                            },
                            "departments": {
                                "$ref": "#/components/schemas/companyDepartmentResponse"
                            },
                            "teams": {
                                "$ref": "#/components/schemas/departmentTeamResponse"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "CompanyResponse": {
                "properties": {
